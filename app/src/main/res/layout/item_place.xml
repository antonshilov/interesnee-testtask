<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="6dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image_place"
            android:layout_width="@dimen/place_image_medium"
            android:layout_height="@dimen/place_image_medium"
            android:padding="10dp"
            android:src="@android:drawable/ic_media_play" />

        <TextView
            android:id="@+id/text_place_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/circle_image_place"
            android:layout_toRightOf="@id/circle_image_place"
            android:textSize="@dimen/text_body"
            tools:text="Russia, Krasnoyarsk" />

        <TextView
            android:id="@+id/text_place_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_place_text"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/circle_image_place"
            android:layout_toRightOf="@id/circle_image_place"
            android:textSize="@dimen/text_small_body"
            tools:text="31.12.2015" />

    </RelativeLayout>

</android.support.v7.widget.CardView>